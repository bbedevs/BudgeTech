<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    tools:context=".views.budgeting.add_budget">


    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/appPrimaryColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </View>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="15dp"
        android:text="Choose these following Categories to divide your expenses"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textAlignment="center"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="600dp"
    android:layout_marginTop="150dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    >
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="1dp"
        android:gravity="top"
        android:layout_gravity="center|top"
        android:layout_marginHorizontal="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"

            >
            <androidx.cardview.widget.CardView
                android:id="@+id/menu_option1"
                android:layout_width="160dp"
                android:layout_height="175dp"
                android:layout_gravity="left"
                android:padding="7dp"
                android:outlineSpotShadowColor="@color/appPrimaryColor"
                app:cardElevation="6dp"
                app:cardPreventCornerOverlap="true">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/chat"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="17dp"

                    android:clickable="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Daily Record"
                    android:textColor="@color/appPrimaryColor"
                    android:layout_gravity="bottom|center"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="15sp"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/menu_option2"
                android:layout_width="160dp"
                android:layout_height="175dp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:outlineSpotShadowColor="@color/appPrimaryColor"
                app:cardElevation="6dp"
                app:cardPreventCornerOverlap="true">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/date"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="17dp"

                    android:clickable="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Monthly Budget"
                    android:textColor="@color/appPrimaryColor"
                    android:layout_gravity="bottom|center"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="15sp"/>

            </androidx.cardview.widget.CardView>

              </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin ="10dp"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/menu_option3"
                android:layout_width="160dp"
                android:layout_height="175dp"
                android:layout_gravity="left|center"
                android:padding="7dp"
                android:outlineSpotShadowColor="@color/appPrimaryColor"
                app:cardElevation="6dp"
                app:cardPreventCornerOverlap="true">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/chat"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="17dp"

                    android:clickable="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manage Savings"

                    android:textAlignment="center"
                    android:textColor="@color/appPrimaryColor"
                    android:layout_gravity="bottom|center"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="15sp"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/menu_option4"
                android:layout_width="160dp"
                android:layout_height="175dp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"

                android:outlineSpotShadowColor="@color/appPrimaryColor"
                app:cardElevation="6dp"
                app:cardPreventCornerOverlap="true">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/date"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="17dp"

                    android:clickable="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Manage Loan Payments"
                    android:textColor="@color/appPrimaryColor"
                    android:layout_gravity="bottom|center"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="15sp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/menu_option6"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_gravity="center|left"
                android:layout_marginHorizontal="10dp"
                android:outlineSpotShadowColor="@color/appPrimaryColor"
                app:cardElevation="6dp"
                app:cardPreventCornerOverlap="true">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/icons8_coin_wallet_64"
                    android:layout_gravity="center|top"

                    android:clickable="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Wallet"
                    android:textColor="@color/appPrimaryColor"
                    android:layout_gravity="bottom|center"

                    android:layout_marginBottom="30dp"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>




    </LinearLayout>

</ScrollView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/nav_bar"
            android:background="@color/appPrimaryColor"
            app:itemBackground="@color/appPrimaryColor"
            app:itemTextColor="@color/white"
            app:itemIconTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:menu="@menu/menu_nav"
         >
        </com.google.android.material.bottomnavigation.BottomNavigationView>


</androidx.constraintlayout.widget.ConstraintLayout>

