<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.recordkeeping.add_record">

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/appPrimaryColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </View>

    <androidx.cardview.widget.CardView

        android:outlineSpotShadowColor="@color/appPrimaryColor"
        android:id="@+id/maincard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        >

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;Back "
            android:textColor="@color/appPrimaryColor"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="8dp"
            android:clickable="true"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top"
            android:padding="20dp">
            <TextView
                android:id="@+id/manage_records"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="MANAGE records"
                android:textColor="@color/appFonts"
                android:textSize="22sp"
                android:textAlignment="center"
                android:elevation="15dp"
             >
            </TextView>
            <View
                android:layout_width="80dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:background="@color/appPrimaryColor"
                android:layout_marginTop="3dp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="25dp"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginVertical="5dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="1dp"
                android:contentDescription="string/content_description_media"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/addrec"
                android:backgroundTint="@color/white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Start Tracking Money by mantaining Records and We will help you manage it!"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/appFonts"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/add_first_rec"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="36dp"
                android:background="@drawable/auth_button_layout"
                android:text="ADD YOUR RECORD"
                android:textColor="@color/white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:paddingHorizontal="40dp"
            >
            <View
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:layout_gravity="center|right"
                android:background="@color/appPrimaryColor"

                />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="OR"
                android:textColor="@color/appIcons"
                android:textSize="18sp"
                android:padding="10dp"
                >
            </TextView>
            <View
                android:id="@+id/view"
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:layout_gravity="center|left"
                android:background="@color/appPrimaryColor"
                />
        </LinearLayout>

            <Button
                android:id="@+id/scan_img"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:background="@drawable/auth_button_signup_layout"
                android:text="ScAN AN IMAGE"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>