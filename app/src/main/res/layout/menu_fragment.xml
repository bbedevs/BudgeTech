<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/appBackground"
    >


    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/appPrimaryColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">




    </View>

    <TextView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="My Dashboard"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name" />


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Loading"
        android:textStyle="italic"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/current_balance_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Loading"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu" />

    <ImageButton
        android:id="@+id/record_diary_button"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginEnd="200dp"
        android:background="@color/appgrey"
        android:src="@drawable/record"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Record Diary"
        android:textColor="@color/appPrimaryColor"
        app:layout_constraintTop_toTopOf="@+id/record_diary_button"
        app:layout_constraintBottom_toBottomOf="@id/record_diary_button"
        app:layout_constraintStart_toStartOf="@id/record_diary_button"
        app:layout_constraintEnd_toEndOf="@id/record_diary_button"
        android:layout_marginTop="90dp" />

    <ImageButton
        android:id="@+id/monthly_budget_button"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="200dp"
        android:background="@color/appgrey"
        android:src="@drawable/monthly"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Budget"
        android:textColor="@color/appPrimaryColor"
        app:layout_constraintTop_toTopOf="@+id/monthly_budget_button"
        app:layout_constraintBottom_toBottomOf="@id/monthly_budget_button"
        app:layout_constraintStart_toStartOf="@id/monthly_budget_button"
        app:layout_constraintEnd_toEndOf="@id/monthly_budget_button"
        android:layout_marginTop="90dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>


    <ImageButton
        android:id="@+id/savings_button"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/record_diary_button"
        android:src="@drawable/savings"
        android:background="@color/appgrey"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Savings"
        android:textColor="@color/appPrimaryColor"
        app:layout_constraintTop_toTopOf="@+id/savings_button"
        app:layout_constraintBottom_toBottomOf="@id/savings_button"
        app:layout_constraintStart_toStartOf="@id/savings_button"
        app:layout_constraintEnd_toEndOf="@id/savings_button"
        android:layout_marginTop="90dp" />

    <ImageButton
        android:id="@+id/loans_button"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/monthly_budget_button"
        android:src="@drawable/loans"
        android:background="@color/appgrey" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Loans"
        android:textColor="@color/appPrimaryColor"
        app:layout_constraintTop_toTopOf="@+id/loans_button"
        app:layout_constraintBottom_toBottomOf="@id/loans_button"
        app:layout_constraintStart_toStartOf="@id/loans_button"
        app:layout_constraintEnd_toEndOf="@id/loans_button"
        android:layout_marginTop="90dp" />




    <ImageButton
        android:id="@+id/wallet_button"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintTop_toBottomOf="@id/loans_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="290dp"
        android:src="@drawable/wallet"
        android:background="@color/appgrey"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Wallet"
        android:textColor="@color/appPrimaryColor"
        app:layout_constraintTop_toTopOf="@+id/wallet_button"
        app:layout_constraintBottom_toBottomOf="@id/wallet_button"
        app:layout_constraintStart_toStartOf="@id/wallet_button"
        app:layout_constraintEnd_toEndOf="@id/wallet_button"
        android:layout_marginTop="90dp" />




</androidx.constraintlayout.widget.ConstraintLayout>